<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <beans profile="server">
        <bean abstract="true" id="baseDao" class="com.ejisto.modules.dao.local.BaseLocalDao" lazy-init="true"/>
        <bean id="settingsDao" class="com.ejisto.modules.dao.local.SettingsDao" parent="baseDao" lazy-init="true"/>
        <bean id="mockedFieldsDao" class="com.ejisto.modules.dao.local.MockedFieldsDao" parent="baseDao"
              lazy-init="true"/>
        <bean id="objectFactoryDao" class="com.ejisto.modules.dao.local.ObjectFactoryDao" parent="baseDao"
              lazy-init="true"/>
        <bean id="customObjectFactoryDao" class="com.ejisto.modules.dao.local.CustomObjectFactoryDao" parent="baseDao"
              lazy-init="true"/>
        <bean id="webApplicationDescriptorDao" class="com.ejisto.modules.dao.local.WebApplicationDescriptorDao"
              parent="baseDao" lazy-init="true"/>
        <bean id="containersDao" class="com.ejisto.modules.dao.local.ContainersDao" parent="baseDao" lazy-init="true"/>
        <bean id="dataSource" class="com.ejisto.modules.dao.db.EmbeddedDatabaseManager"/>
    </beans>

    <beans profile="test">
        <!-- original suggestion by "Patrick" on StackOverflow (http://stackoverflow.com/a/7391104)-->
        <bean id="testProperties"
              class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
            <property name="targetObject" value="#{@systemProperties}"/>
            <property name="targetMethod" value="putAll"/>
            <property name="arguments">
                <util:properties>
                    <prop key="force.db.init">true</prop>
                </util:properties>
            </property>
        </bean>
    </beans>


</beans>